<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_red_dark"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <!-- SOS Title -->
    <TextView
        android:id="@+id/tvSosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMERGENCY ALERT"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp" />

    <!-- SOS Icon -->
    <ImageView
        android:id="@+id/ivSosIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/sos"
        android:contentDescription="Alert Icon" />

    <!-- User Info -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User: --"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_mylocation"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvUserLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fetching location..."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSosTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <!-- Buttons -->
    <Button
        android:id="@+id/btnNavigateToUser"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@android:color/white"
        android:text="NAVIGATE TO USER"
        android:textColor="#D32F2F"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:drawablePadding="12dp"
        android:contentDescription="Navigate to user location" />

    <Button
        android:id="@+id/btnCallUser"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/white"
        android:text="CALL USER"
        android:textColor="#D32F2F"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:drawableStart="@drawable/ic_call"
        android:drawablePadding="12dp"
        android:contentDescription="Call the user" />

    <Button
        android:id="@+id/btnMarkResolvedd"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/white"
        android:text="MARK AS RESOLVED"
        android:textColor="#D32F2F"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:contentDescription="Mark SOS as resolved" />

</LinearLayout>
