<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:background="@drawable/card_bg">

    <!-- Journey Map Image -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/journeyMapImage"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Journey Title -->
    <TextView
        android:id="@+id/journeyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Central Park"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/journeyMapImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/journeyStatus" />

    <!-- Journey Status (Safe / SOS) -->
    <TextView
        android:id="@+id/journeyStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safe"
        android:textColor="@android:color/holo_green_dark"
        android:background="@drawable/status_safe_bg"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/journeyTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Journey Time and Duration -->
    <TextView
        android:id="@+id/journeyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30 AM • 25 min"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/journeyTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Journey Route -->
    <TextView
        android:id="@+id/journeyRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home ➔ Central Park"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/journeyTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
