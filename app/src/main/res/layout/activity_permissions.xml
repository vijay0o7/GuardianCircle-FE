<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Permissions">

    <!-- Top Icon in Circle -->
    <LinearLayout
        android:id="@+id/icon_container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_circle_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/iconmain"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_mic"
            app:tint="@color/theme_purple" />

        <ImageView
            android:id="@+id/iconloc"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_location"
            app:tint="@color/theme_purple" />


    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/txttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Permissions"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/icon_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Location Permission Box -->
    <LinearLayout
        android:id="@+id/locationbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_permission_box"
        app:layout_constraintTop_toBottomOf="@id/txttitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="32dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_location"
            android:layout_marginEnd="12dp"
            app:tint="@color/theme_purple" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location access helps us provide you with nearby services and relevant recommendations"
            android:textSize="20sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Microphone Permission Box -->
    <LinearLayout
        android:id="@+id/micbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_permission_box"
        app:layout_constraintTop_toBottomOf="@id/locationbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="32dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mic"
            android:layout_marginEnd="12dp"
            app:tint="@color/theme_purple" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Microphone access enables voice features and audio communication"
            android:textSize="20sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Open Settings Button -->
    <Button
        android:id="@+id/btn_opensettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Open Settings"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/theme_purple"
        app:layout_constraintTop_toBottomOf="@id/micbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="32dp" />

    <!-- I'll do this later -->
    <TextView
        android:id="@+id/btnlater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'll do this later"
        android:textColor="@color/theme_purple"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/btn_opensettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
