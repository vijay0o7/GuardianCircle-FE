<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mapview">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="12dp"
        android:elevation="6dp"
        android:backgroundTint="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <Space android:layout_width="16dp" android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/estimatedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:text="ETA: 10 mins"
                android:padding="5dp"
                android:textColorHint="@color/black"
                android:textColor="#555555"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent" />

            <Space android:layout_width="16dp" android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnSOS"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="SOS"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#B295E5" />

            <Space android:layout_width="12dp" android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnEmergencyContacts"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:text="Emergency Contacts"
                android:textColor="#B295E5"
                android:textStyle="bold"
                android:backgroundTint="#F4F1FF"
                android:drawableLeft="@drawable/ic_call"
                android:drawableTint="@color/theme_purple"
                android:drawablePadding="8dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
